{
  // 使用 IntelliSense 了解相关属性。
  // 悬停以查看现有属性的描述。
  // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "运行基础示例",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "cwd": "${workspaceFolder}/examples/basic",
      "program": "${workspaceFolder}/examples/basic/main.go",
      "console": "integratedTerminal",
      "windows": {
        "env": {
          "GOARCH": "amd64",
          "GOOS": "windows"
        }
      },
      "osx": {
        "env": {
          "GOARCH": "arm64",
          "GOOS": "darwin"
        }
      }
    },
    {
      "name": "运行适配器示例",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "cwd": "${workspaceFolder}/examples/adapters",
      "program": "${workspaceFolder}/examples/adapters/main.go",
      "console": "integratedTerminal",
      "windows": {
        "env": {
          "GOARCH": "amd64",
          "GOOS": "windows"
        }
      },
      "osx": {
        "env": {
          "GOARCH": "arm64",
          "GOOS": "darwin"
        }
      }
    },
    {
      "name": "运行工厂模式示例",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "cwd": "${workspaceFolder}/examples/factory",
      "program": "${workspaceFolder}/examples/factory/main.go",
      "console": "integratedTerminal",
      "windows": {
        "env": {
          "GOARCH": "amd64",
          "GOOS": "windows"
        }
      },
      "osx": {
        "env": {
          "GOARCH": "arm64",
          "GOOS": "darwin"
        }
      }
    },
    {
      "name": "运行性能基准测试",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "cwd": "${workspaceFolder}/examples/benchmark",
      "program": "${workspaceFolder}/examples/benchmark/main.go",
      "console": "integratedTerminal",
      "windows": {
        "env": {
          "GOARCH": "amd64",
          "GOOS": "windows"
        }
      },
      "osx": {
        "env": {
          "GOARCH": "arm64",
          "GOOS": "darwin"
        }
      }
    },
    {
      "name": "运行配置示例",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "cwd": "${workspaceFolder}/examples/configuration",
      "program": "${workspaceFolder}/examples/configuration/main.go",
      "console": "integratedTerminal",
      "windows": {
        "env": {
          "GOARCH": "amd64",
          "GOOS": "windows"
        }
      },
      "osx": {
        "env": {
          "GOARCH": "arm64",
          "GOOS": "darwin"
        }
      }
    },
    {
      "name": "运行所有测试",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}",
      "args": ["-v", "./..."],
      "console": "integratedTerminal",
      "windows": {
        "env": {
          "GOARCH": "amd64",
          "GOOS": "windows"
        }
      },
      "osx": {
        "env": {
          "GOARCH": "arm64",
          "GOOS": "darwin"
        }
      }
    },
    {
      "name": "运行特定测试",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}",
      "args": ["-v", "-run", "^${input:testName}$"],
      "console": "integratedTerminal",
      "windows": {
        "env": {
          "GOARCH": "amd64",
          "GOOS": "windows"
        }
      },
      "osx": {
        "env": {
          "GOARCH": "arm64",
          "GOOS": "darwin"
        }
      }
    },
    {
      "name": "调试模式 - 基础示例",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "cwd": "${workspaceFolder}/examples/basic",
      "program": "${workspaceFolder}/examples/basic/main.go",
      "console": "integratedTerminal",
      "showLog": true,
      "logOutput": "debugger",
      "windows": {
        "env": {
          "GOARCH": "amd64",
          "GOOS": "windows"
        }
      },
      "osx": {
        "env": {
          "GOARCH": "arm64",
          "GOOS": "darwin"
        }
      }
    }
  ],
  "inputs": [
    {
      "id": "testName",
      "description": "输入要运行的测试名称",
      "default": "TestLogger",
      "type": "promptString"
    }
  ]
}
